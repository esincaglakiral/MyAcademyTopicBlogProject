﻿@using Topic.WebUI.Dtos.QuestionDto
@model CreateQuestionDto
@{
    ViewData["Title"] = "Sorular";
    ViewData["SubTitle"] = "Yeni Soru Oluştur";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <label>Soru Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Cevap/Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>

